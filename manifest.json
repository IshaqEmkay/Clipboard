{
    "manifest_version": 3,
    "name": "Clipboard",
    "version": "1.3",
    "description": "A clipboard extension to manage multiple clipboard items, with features like history, pinning, and deletion.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "permissions": [
      "clipboardRead",
      "clipboardWrite",
      "storage",
      "activeTab",
      "contextMenus",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  